# connection {{{
host = "localhost"
port = 6600

password = "user"
# }}}

# interface {{{
enable-mouse = no

library-page-tags = albumartist album disc

# included in screen-switch'g with (shift-)tab
screen-list = library browse

# search in mode |artist+title| by default
search-mode = 4

audible-bell = no
visible-bell = no

find-show-last = no
find-wrap = yes
wrap-around = no
bell-on-wrap = no

seek-time = 1.0
# }}}

# display {{{
## Show a list of the screens in the top line.
#welcome-screen-list = yes
welcome-screen-list = no

## Make the cursor as wide as the screen.
#wide-cursor = yes
wide-cursor = no

## Use the terminal's hardware cursor instead of inverse colors
#hardware-cursor = yes
hardware-cursor = no

## Hide playlist cursor after x seconds (0 disables this feature).
#hide-cursor = 5
hide-cursor = 1

## Scroll the title if it is too long for the screen.
scroll = yes

## The separator to show at the end of the scrolling title.
#scroll-sep = " *** "




## list-format
## The format used to display songs in the main window.
#list-format = "%name%|[[%artist%|%performer%|%composer%] - ][%title%|%shortfile%]"
list-format = "%disc%.%track% %title%"

## The format used to display songs in the search window.
#search-format = "%name%|[[%artist%|%performer%|%composer%] - ][%title%|%shortfile%]"

## The format used to display songs on the status line.
#status-format = "[[%artist%|%performer%|%composer%] - ][%title%|%shortfile%]"
status-format = "%title%"



## The time, in seconds, for which status messages will be displayed.
#status-message-time = 3
status-message-time = 2

## Sets whether to display remaining or elapsed time in
## the status window. Default is elapsed.
#timedisplay-type = elapsed
timedisplay-type = elapsed

## Show the bitrate in the status bar when playing a stream.
#visible-bitrate = no
visible-bitrate = yes

## Change the XTerm title (ncmpc will not restore the title).
#set-xterm-title = no

## The format used to for the xterm title when ncmpc is playing.
#xterm-title-format = "ncmpc: [%name%|[[%artist%|%performer%|%composer%] - ][%title%|%shortfile%]]"

## Automatically save the lyrics after receiving them.
#lyrics-autosave = no

## The text editor used for editing lyrics.
#text-editor = emacs
text-editor = nvim

## Ask before starting an editor.
#text-editor-ask = yes

## The prefix of chat messages
#chat-prefix = "<user> "

## Display song length in second column
#second-column = yes
# }}}

# colors {{{
# NOTE:
#   000 := black
#   008 := grey
#   015 := white

enable-colors = yes

color background = 000

# title-lines {{{
# first row, LHS
color title-bold = 008
# foreground only for RHS, background for entire first row
color title = 008/000

# separator between title-lines & main display
color line = 008
# second row, RHS
color line-flags = 008
# }}}

# main display {{{
# non-highlighted
color list = 015

# highlighted (e.g., selected or currectly playing)
color list-bold = 012,bold/000
# }}}

# browser {{{
color browser-directory = 015
color browser-playlist = 015
# }}}

# status-line {{{
color progressbar = 000/000
color progressbar-background = 008

# play/pause indicator
color status-state = 008/000
color status-song  = 008/000
# time&bit-rate
color status-time  = 008/000

color alert = 000,bold/008
# }}}
# }}}

# vim: filetype=conf foldmethod=marker
