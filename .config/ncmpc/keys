# navigation {{{
key up = 'k'
key down = 'j'
key pgup = Ctrl-U
key pgdn = Ctrl-D

key top = 'H'
key home = 'g'
key end = 'G'
# }}}

## Key configuration screen
key screen-keyedit = '0'

## Quit
key quit = 'Q'

## Select currently playing song
key select-playing = 0

## Help screen
key screen-help = F1

## Queue screen
key screen-playlist = '3'

## Browse screen
key screen-browse = '2'

## Play/Enter directory
key play = 'l'

## Pause
key pause = 32

## Stop
key stop = 0

## Crop
key crop = 0

## Seek forward
key seek-forward = 261

## Seek backward
key seek-backward = 260

## Increase volume
key volume-up = 61

## Decrease volume
key volume-down = 45

## Select/deselect song in queue
key select = 0

## Select all listed items
key select_all = 0

## Delete song from queue
key delete = 'D'

## Clear queue
key clear = 0

## Start a music database update
key db-update = 0

## Go to parent directory
key go-parent-directory = 'h'

## Locate song in browser
key locate = 'I'

## Move item up
key move-up = 'K'

## Move item down
key move-down = 'J'

## Toggle find mode
key wrap-mode = 0

## Toggle auto center mode
key autocenter-mode = 0

## Library page
key library-page = '1'

## Search screen
key screen-search = '4'

## Lyrics screen
key screen-lyrics = '7'

## Interrupt action
key lyrics-interrupt = 0

## Update Lyrics
key lyrics-update = 0

## Outputs screen
key screen-outputs = '8'

## Chat screen
key screen-chat = '9'

