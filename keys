## Key bindings for ncmpc (generated by ncmpc)

## Key configuration screen
key screen-keyedit = '0'

## Quit
key quit = 'q'

## Move cursor up
key up = 'k'

## Move cursor down
key down = 'j'

## Move cursor to the top of screen
key top = 'H'

## Move cursor to the top of the list
key home = 262,  Ctrl-A,  'g'

## Move cursor to the bottom of the list
key end = 360,  Ctrl-E,  'G'

## Page up
key pgup = 339,  Ctrl-U

## Page down
key pgdn = 338,  Ctrl-D

## Select currently playing song
key select-playing = 0

